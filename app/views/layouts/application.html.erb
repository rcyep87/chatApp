<!DOCTYPE html>
<html>
<head>
  <title>Chatroom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<header>
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to "Profile", current_user %></li>

    <% if user_logged_in? %>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
    <% else %>
      <li><%= link_to "Log in", login_path %></li>
    <% end %>

  </ul>
  <nav class="deep-orange accent-2" role="navigation">
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">chatApp</a>
      <ul class="right hide-on-med-and-down">
        <li><%= link_to "Chatroom", rooms_path %></li>
        <li><%= link_to "About", about_path %></li>
        <!-- Dropdown Trigger -->
        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
      </ul>
    </div>
  </nav>
</header>

<body class='container'>

<%= yield %>

<%= params.inspect %>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
